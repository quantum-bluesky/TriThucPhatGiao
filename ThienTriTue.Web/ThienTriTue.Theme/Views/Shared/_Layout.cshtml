@* ThienTriTue.Theme/Views/Shared/_Layout.cshtml *@
@{
    // Lấy thông tin cần thiết từ Layout
    var hasLayoutModel = Model != null;
    var headShape = hasLayoutModel ? Model?.Head : null;
    var contentShape = hasLayoutModel ? Model?.Content : null;
    var footerShape = hasLayoutModel ? Model?.Footer : null;
    var footShape = hasLayoutModel ? Model?.Foot : null;
    string? resolvedTitle = ViewContext?.ViewData?["Title"] as string;

    if (string.IsNullOrWhiteSpace(resolvedTitle) && New != null)
    {
        var titleShape = await DisplayAsync(New!.Title);
        resolvedTitle = titleShape?.ToString();
    }

    var fullTitle = !string.IsNullOrWhiteSpace(resolvedTitle)
        ? $"{resolvedTitle} - Thư Viện Tổng Hợp"
        : "Thư Viện Tổng Hợp Tri Thức & Tâm Linh";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@fullTitle</title>

    <link rel="stylesheet" href="~/css/app.css" />

    @if (headShape != null)
    {
        @await DisplayAsync(headShape)
    }
</head>
<body class="antialiased min-h-screen">

    @{
        Microsoft.AspNetCore.Html.IHtmlContent? bodyContent = RenderBody();
        string? bodyContentString = bodyContent?.ToString();
        Microsoft.AspNetCore.Html.IHtmlContent? headerSection = await RenderSectionAsync("Header", required: false);
    }

    <header class="bg-indigo-700 shadow-xl">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-extrabold text-white text-center tracking-tight">
                Thư Viện Tổng Hợp Tri Thức & An Lạc
            </h1>
            <p class="mt-1 text-base text-indigo-200 text-center">Nơi tổng hợp các bài viết về Giáo Dục, Phật Giáo và Luật Nhân Quả</p>
        </div>
    </header>

    @if (headerSection != null)
    {
        <section aria-label="Header của chuyên mục" class="border-b border-gray-200">
            @headerSection
        </section>
    }

    <main class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        @if (contentShape != null)
        {
            @await DisplayAsync(contentShape)
        }
        else if (!string.IsNullOrWhiteSpace(bodyContentString))
        {
            @bodyContent
        }
    </main>

    @if (footerShape != null)
    {
        @await DisplayAsync(footerShape)
    }

    <footer class="bg-gray-800 mt-12">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-sm text-gray-400">
                &copy; 2025 Thư Viện Tổng Hợp. Mọi quyền được bảo lưu.
            </p>
        </div>
    </footer>

    @if (footShape != null)
    {
        @await DisplayAsync(footShape)
    }
</body>
</html>
