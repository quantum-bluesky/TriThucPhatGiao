@* ThienTriTue.Theme/Views/Buddha/Index.cshtml *@
@model dynamic

@{
    ViewData["Title"] = "Phật Giáo & Chánh Pháp";
}

@section Header {
    <!-- Header cho chuyên mục Phật Giáo (Màu Tím) -->
    <header class="bg-purple-700 shadow-xl">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <a href="/" class="inline-flex items-center text-purple-200 hover:text-white mb-4 transition duration-150">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5" /><path d="M12 19l-7-7 7-7" /></svg>
                Quay lại Trang Chủ
            </a>
            <h1 class="text-4xl font-extrabold text-white tracking-tight">
                Phật Giáo & Chánh Pháp
            </h1>
            <p class="mt-2 text-lg text-purple-200">
                Ánh sáng từ bi và trí tuệ. Khám phá các giáo lý và thực hành thiền định.
            </p>
        </div>
    </header>
}

<div>
    <h2 class="text-3xl font-bold text-gray-800 mb-8 border-b-2 pb-2 border-purple-500">Giáo Lý & Thực Hành</h2>

    <!-- Danh sách bài viết - Dạng lưới 2 cột trên desktop -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        @* Vùng này sẽ được thay thế bằng vòng lặp dữ liệu động từ Orchard Core *@

        <!-- Bài viết mẫu 1: Báo Cáo Chuyên Sâu -->
        <div class="bg-white rounded-xl shadow-md p-6 article-card transition duration-300 ease-in-out border-l-4 border-purple-500">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <a href="/phat-giao/bao-cao-chuyen-sau" class="hover:text-purple-600 transition duration-150">Báo Cáo Chuyên Sâu: Căn Nguyên Thảm Họa và Con Đường Giải Thoát Nghiệp Quả</a>
            </h3>
            <p class="text-sm text-gray-500 mb-4">Ngày đăng: 25/10/2025 | Tác giả: ST</p>
            <p class="text-gray-700">
                Phân tích dựa trên thông điệp khẩn cấp của Pháp Sư Tịnh Không
            </p>
            <a href="/phat-giao/bao-cao-chuyen-sau" class="mt-4 inline-block text-purple-600 hover:text-purple-800 font-medium text-sm transition duration-150">
                Đọc tiếp &rarr;
            </a>
        </div>

        <!-- Bài viết mẫu 2: Tứ Diệu Đế -->
        <div class="bg-white rounded-xl shadow-md p-6 article-card transition duration-300 ease-in-out border-l-4 border-purple-500">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <a href="/phat-giao/tu-dieu-de" class="hover:text-purple-600 transition duration-150">Phân Tích Tứ Diệu Đế: Nền Tảng Của Phật Giáo</a>
            </h3>
            <p class="text-sm text-gray-500 mb-4">Ngày đăng: 08/11/2024 | Tác giả: Thiện Minh</p>
            <p class="text-gray-700">
                Giải thích chi tiết về Khổ, Tập, Diệt, Đạo và ý nghĩa của chúng trong đời sống hiện đại.
            </p>
            <a href="/phat-giao/tu-dieu-de" class="mt-4 inline-block text-purple-600 hover:text-purple-800 font-medium text-sm transition duration-150">
                Đọc tiếp &rarr;
            </a>
        </div>

        <!-- Vùng Placeholder -->
        <div class="bg-white rounded-xl shadow-md p-6 article-card transition duration-300 ease-in-out border-l-4 border-purple-500 flex items-center justify-center text-center">
            <p class="text-gray-500 italic">... Tiếp tục thêm nội dung của bạn vào đây ...</p>
        </div>

    </div>

    <!-- Pagination -->
    <div class="mt-12 flex justify-center">
        <button class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-150">
            Xem thêm các bài viết cũ
        </button>
    </div>
</div>