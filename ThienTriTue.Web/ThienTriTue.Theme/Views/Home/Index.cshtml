@model dynamic

@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="grid grid-cols-1 gap-8 md:grid-cols-3 lg:gap-10">

    <div class="bg-white rounded-xl shadow-lg p-6 flex flex-col card-hover-effect">
        <div class="flex items-center justify-center p-3 rounded-full bg-blue-500 w-16 h-16 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" />
